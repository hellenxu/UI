<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="UI.ANIM.Base.Theme">
		<!-- Customize your theme here. -->
	</style>

	<style name="UI.ANIM.Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">#009ad6</item>
		<item name="colorPrimaryDark">#145b7d</item>
		<item name="colorAccent">#90d7ec</item>
	</style>

    <style name="ActionSheet">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/ActionSheetAnimation</item>
    </style>

    <style name="ActionSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/action_sheet_enter</item>
        <item name="android:windowExitAnimation">@anim/action_sheet_exit</item>
    </style>

    <style name="ExpandedToolbarTitle" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>
