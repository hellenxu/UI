<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="UI.ANIM.Base.Theme">
		<!-- Customize your theme here. -->
	</style>

	<style name="UI.ANIM.Base.Theme" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="colorPrimary">#009ad6</item>
		<item name="colorPrimaryDark">#145b7d</item>
		<item name="colorAccent">#90d7ec</item>
	</style>

	<!-- CreditCardView -->
	<declare-styleable name="SixCC">
		<attr name="card_cvv" format="integer"/>
		<attr name="card_holder" format="string"/>
		<attr name="card_expiry" format="string"/>
		<attr name="number" format="string"/>
		<attr name="side" format="enum">
			<enum name="front" value="1"/>
			<enum name="back" value="0"/>
		</attr>
	</declare-styleable>
</resources>
