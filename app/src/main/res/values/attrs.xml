<?xml version="1.0" encoding="utf-8"?>
<resources>
	<declare-styleable name="mat_progress">
		<attr name="bar_width" format="dimension"/>
		<attr name="rim_width" format="dimension"/>
		<attr name="bar_color" format="color"/>
		<attr name="rim_color" format="color"/>
		<attr name="spin_speed" format="float"/>
		<attr name="mat_radius" format="dimension"/>
		<attr name="tick_size" format="dimension"/>
	</declare-styleable>

	<declare-styleable name="calendar">
		<attr name="cell_width" format="dimension"/>
		<attr name="cell_height" format="dimension"/>
		<attr name="cell_margin_left" format="dimension"/>
		<attr name="cell_margin_top" format="dimension"/>
		<attr name="cell_txt_size" format="float"/>
		<attr name="cell_txt_color" format="color"/>
	</declare-styleable>

	<declare-styleable name="RichText">
		<attr name="historyEnable" format="boolean"/>
		<attr name="historySize" format="integer"/>
		<attr name="bulletColor" format="color"/>
		<attr name="bulletRadius" format="dimension"/>
		<attr name="bulletGapWidth" format="dimension"/>
		<attr name="quoteColor" format="color"/>
		<attr name="quoteStripeWidth" format="dimension"/>
		<attr name="quoteGapWidth" format="dimension"/>
	</declare-styleable>

	<!-- CreditCardView -->
	<declare-styleable name="SixCC">
		<attr name="card_cvv" format="integer"/>
		<attr name="card_holder" format="string"/>
		<attr name="card_expiry" format="string"/>
		<attr name="number" format="string"/>
		<attr name="side" format="enum">
			<enum name="front" value="1"/>
			<enum name="back" value="0"/>
		</attr>
	</declare-styleable>

	<declare-styleable name="Polygon">
		<attr name="radius" format="dimension|reference" />
		<attr name="outerWidth" format="dimension|reference" />
		<attr name="outerColor" format="color|reference" />
		<attr name="innerColor" format="color|reference" />
		<attr name="isHasStroke" format="boolean|reference" />
	</declare-styleable>
</resources>
