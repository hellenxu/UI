<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/rlay_back_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="@dimen/default_card_width"
                android:layout_height="@dimen/default_card_height"
                tools:background="@drawable/bg_card_default">

	<TextView android:layout_width="match_parent"
	          android:layout_height="30dp"
	          android:layout_marginTop="18dp"
	          android:background="@android:color/black"/>

	<TextView android:id="@+id/tv_cvv"
	          android:layout_width="match_parent"
	          android:layout_height="30dp"
	          android:layout_centerVertical="true"
	          android:layout_marginEnd="8dp"
	          android:layout_marginStart="8dp"
	          android:background="@drawable/sign_strip"/>

	<ImageView android:id="@+id/iv_back_logo"
	           android:layout_width="@dimen/logo_right_width"
	           android:layout_height="@dimen/logo_right_height"
	           android:layout_alignParentBottom="true"
	           android:layout_alignParentEnd="true"
	           android:layout_marginBottom="8dp"
	           android:layout_marginEnd="16dp"
	           android:contentDescription="@null"/>

</RelativeLayout>